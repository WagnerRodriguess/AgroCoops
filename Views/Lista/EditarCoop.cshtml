
@{
    ViewBag.Title = "EditarCoop";
}

<h2>EditarPessoa</h2>

<form name="Forms1" action="/Lista/EditarCoop?id=@Model.IDCooperativa" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="nome" maxlength="65" name="nome" value="@Model.NomeCooperativa" />
    </div>

    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" name="Telefone" class="form-control" maxlength="11" id="Telefone" value="@Model.Telefone">
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control" name="email" maxlength="100" id="email" value="@Model.Email" />
    </div>

    <div class="form-group">
        <label for="CnpjCooperativo">Cnpj Cooperativo</label>
        <input type="text" name="cnpj" class="form-control" id="cnpj" maxlength="11" value="@Model.CnpjCooperativo">
    </div>


    <div class="form-group">
        <label for="CnpjCooperativo">Cnpj Cooperativo</label>
        <input type="text" name="cnpj" class="form-control" id="cnpj" maxlength="11" value="@Model.CnpjCooperativo">
    </div>

    <div class="form-group">
        <label for="Cidade">Cidade</label>
        <input type="text" name="Cidade" class="form-control" id="cidade" maxlength="40" value="@Model.CnpjCooperativo">

    </div>

    <div>  <label class="form-group" for="Estado">Estado</label> </div>
    <select name="Estado" id="estado" class="form-group">
        <option> Selecione um Estado </option>
        <option required value="@Model.Regiao"> Alagoas</option>
        <option required value="@Model.Regiao"> Bahia</option>
        <option required value="@Model.Regiao"> Pernambuco</option>
        <option required value="@Model.Regiao"> Sergipe</option>

    </select>


    <div class="form-group">
        <label for="Regiao">Região</label>
        <input type="text" name="Regiao" class="form-control" id="regiao" maxlength="20" value="@Model.Regiao">
    </div>


    <button type="submit" class="btn btn-primary">Editar</button>
    <a href="/Colaborador/IndexCol" class="btn btn-danger"> Voltar </a>
</form>
