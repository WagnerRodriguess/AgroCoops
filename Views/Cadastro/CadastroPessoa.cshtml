
@{
    ViewBag.Title = "CadastroPessoa";
}

<h2>CadastroPessoa</h2>

<form name="Form1" action="/Cadastro/CadastroPessoa" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" name="nome" class="form-control" id="nome" maxlength="65" required placeholder="Digite seu nome">

    </div>

    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" name="telefone" class="form-control" id="telefone" maxlength="11" required placeholder="Insira seu Telefone">
    </div>

    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="text" name="email" class="form-control" id="email" maxlength="100" required placeholder="Digite seu Email">
    </div>

    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="password" name="senha" class="form-control" id="senha" maxlength="6" required placeholder="Digite sua senha">
    </div>

    <div>

        <label class="form-group" for="tipoPessoa">Tipo Pessoa</label>

        <div class="form-group">

            <div>
                <input type="radio" name="tipoPessoa" id="tipoPessoa" class="clinput"
                       required value="P" /> Produtor
            </div>
            <div>
                <input type="radio" name="tipoPessoa" id="tipoPessoa" class="clinput"
                       required value="F" /> Pessoa Fisica
            </div>
                <div>
                    <input type="radio" name="tipoPessoa" id="tipoPessoa" class="clinput"
                           required value="J" /> Pessoa Juridica
                </div>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a class="btn btn-danger" href="/Cadastro/Listar">Voltar</a>

</form>