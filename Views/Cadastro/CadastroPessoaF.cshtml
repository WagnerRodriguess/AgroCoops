
@{
    ViewBag.Title = "CadastroPessoaF";
}

<h2>CadastroPessoaF</h2>

<form name="Form1" action="/Cadastro/CadastroPessoaF" method="post">





    <div class="form-group">
        <label for="Cpf">CPF</label>
        <input type="text" name="CPF" class="form-control" id="cpf" maxlength="11" required placeholder="Digite seu CPF">
    </div>

    <div class="form-group">
        <label for="Cargo">Data de Nascimento</label>
        <input type="date" name="datanasc" class="form-control" id="datanasc" required placeholder="Informe seu Data de Nascimento">
    </div>

    <div>

        <label class="form-group" for="sexo">Sexo</label>

        <div class="form-group">

            <div>
                <input type="radio" name="sexo" id="sexo" class="clinput"
                       required value="M" /> Masculino
            </div>
            <div>
                <input type="radio" name="sexo" id="sexo" class="clinput"
                       required value="F" /> Feminino
            </div>

        </div>
    </div>




    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a class="btn btn-danger" href="/Cadastro/Listar">Voltar</a>

</form>
